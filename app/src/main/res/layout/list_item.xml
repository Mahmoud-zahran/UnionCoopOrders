<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:Skeleton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.cardview.widget.CardView
    android:id="@+id/maincardLayout"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <io.rmiri.skeleton.SkeletonViewGroup
        android:id="@+id/skeletonGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        Skeleton:SK_BackgroundViewsColor="#EEEEEE"
        Skeleton:SK_animationAutoStart="true"
        Skeleton:SK_animationDirection="LTR"
        Skeleton:SK_animationDuration="1000"
        Skeleton:SK_animationFinishType="gradient"
        Skeleton:SK_animationNormalType="gradient"
        Skeleton:SK_backgroundMainColor="@android:color/transparent"
        Skeleton:SK_highLightColor="#DEDEDE"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:layout_marginBottom="5dp">


            <io.rmiri.skeleton.SkeletonView
                android:id="@+id/skeletonViewPhoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                Skeleton:SK_cornerRadius="0dp"
                Skeleton:SK_padding="0dp"
                Skeleton:SK_shapeType="oval">

            </io.rmiri.skeleton.SkeletonView>

            <io.rmiri.skeleton.SkeletonView
                android:id="@+id/skeletonViewAuther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/skeletonViewPhoto"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/skeletonViewPhoto"

                android:layout_toRightOf="@id/skeletonViewPhoto"
                Skeleton:SK_cornerRadius="10dp"
                Skeleton:SK_padding="5dp"
                Skeleton:SK_shapeType="text"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

            </io.rmiri.skeleton.SkeletonView>

            <io.rmiri.skeleton.SkeletonView
                android:id="@+id/skeletonViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/skeletonViewAuther"
                android:layout_toEndOf="@+id/skeletonViewPhoto"

                android:layout_toRightOf="@id/skeletonViewPhoto"
                Skeleton:SK_cornerRadius="10dp"
                Skeleton:SK_padding="5dp"

                Skeleton:SK_shapeType="text">

            </io.rmiri.skeleton.SkeletonView>

            <TextView
                android:id="@+id/repoName"
                android:layout_width="206dp"
                android:layout_height="28dp"

                android:textSize="17sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="101dp" />

            <TextView
                android:id="@+id/repoAuther"
                android:layout_width="231dp"
                android:layout_height="wrap_content"

                android:textSize="12sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="55dp" />

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/repoImage"
                android:layout_width="47dp"
                android:layout_height="53dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/sh_trading_receipt_2x"
                Skeleton:layout_constraintEnd_toEndOf="parent"
                Skeleton:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </io.rmiri.skeleton.SkeletonViewGroup>


</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        >

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/expandableLayout"
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:layout_below="@+id/mainLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="8dp"

        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="NotSibling">


        <TextView
            android:id="@+id/discription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="12dp"
            android:text="Transaction No"
            android:textSize="14sp"
            Skeleton:layout_constraintStart_toEndOf="@+id/appCompatImageView2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="18dp" />

        <TextView
            android:id="@+id/discription5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="24dp"
            android:text="ttdesct"
            android:textSize="14sp"
            Skeleton:layout_constraintStart_toEndOf="@+id/discription"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="18dp" />

        <TextView
            android:id="@+id/discription3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="12dp"
            android:text="No"
            android:textSize="14sp"
            Skeleton:layout_constraintTop_toBottomOf="@+id/discription"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="73dp" />

        <TextView
            android:id="@+id/discription7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="24dp"
            android:text="ttdesct"
            android:textSize="14sp"
            Skeleton:layout_constraintStart_toEndOf="@+id/discription3"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="51dp" />

        <TextView
            android:id="@+id/discription4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Price/Share"
            android:textSize="14sp"
            Skeleton:layout_constraintStart_toEndOf="@+id/appCompatImageView5"
            Skeleton:layout_constraintTop_toBottomOf="@+id/discription3"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/discription9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:text="Transaction Date"
            android:textSize="14sp"
            Skeleton:layout_constraintStart_toEndOf="@+id/appCompatImageView6"
            Skeleton:layout_constraintTop_toBottomOf="@+id/discription4"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/discription8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="24dp"
            android:text="ttdesct"
            android:textSize="14sp"
            Skeleton:layout_constraintStart_toEndOf="@+id/discription4"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="81dp" />

        <TextView
            android:id="@+id/discription10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="24dp"
            android:text="ttdesct"
            android:textSize="14sp"
            Skeleton:layout_constraintStart_toEndOf="@+id/discription9"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="120dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/appCompatImageView2"
            android:layout_width="44dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/sh_transaction"
            Skeleton:layout_constraintStart_toStartOf="parent"
            Skeleton:layout_constraintTop_toTopOf="parent">

        </de.hdodenhof.circleimageview.CircleImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/appCompatImageView3"
            android:layout_width="44dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/shares_trading"
            Skeleton:layout_constraintStart_toStartOf="parent"
            Skeleton:layout_constraintTop_toBottomOf="@+id/appCompatImageView2">

        </de.hdodenhof.circleimageview.CircleImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/appCompatImageView5"
            android:layout_width="44dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/sell_shares_2x"
            Skeleton:layout_constraintStart_toStartOf="parent"
            Skeleton:layout_constraintTop_toBottomOf="@+id/appCompatImageView3">

        </de.hdodenhof.circleimageview.CircleImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/appCompatImageView6"
            android:layout_width="44dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/sh_view_history_2x"
            Skeleton:layout_constraintStart_toStartOf="parent"
            Skeleton:layout_constraintTop_toBottomOf="@+id/appCompatImageView5">

        </de.hdodenhof.circleimageview.CircleImageView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>